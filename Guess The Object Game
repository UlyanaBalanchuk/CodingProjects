# pets function 
def mode3(): 
    chosenpet=random.choice(petlist)
    
    print("These are the pets: ")
    print(petdictionary) 
    
    choice1=input("Pick an attribute: color, diet, size, house or outside")
    if choice1=="color":
        choice2=input("What group: brown, pink, green, or black?")
        if petdictionary[chosenpet][0]==choice2:
            print("correct")
        else: 
            print("incorrect")
    if choice1=="diet":
        choice2=input("What diet: omnivore or carnivore")
        if petdictionary[chosenpet][1]==choice2: 
            print("correct")
        else: 
            print("incorrect")
    if choice1=="size":
        choice2=input("What size: small, medium, or large?")
        if petdictionary[chosenpet][2]==choice2: 
            print("correct")
        else: 
            print("incorrect")
    if choice1=="house or outside":
        choice2=input("Inside or Outside?")
        if petdictionary[chosenpet][3]==choice2: 
            print("correct")
        else: 
            print("incorrect")
    
    choice2=input("Pick an attribute: color, diet, size, house or outside")
    if choice2=="color":
        choice3=input("What group: brown, pink, green, or black?")
        if petdictionary[chosenpet][0]==choice2:
            print("correct")
        else: 
            print("incorrect")
    if choice2=="diet":
        choice3=input("What diet: omnivore or carnivore")
        if petdictionary[chosenpet][1]==choice2: 
            print("correct")
        else: 
            print("incorrect")
    if choice2=="size":
        choice3=input("What size: small, medium, or large?")
        if petdictionary[chosenpet][2]==choice2: 
            print("correct")
        else: 
            print("incorrect")
    if choice2=="house or outside":
        choice3=input("Inside or Outside?")
        if petdictionary[chosenpet][3]==choice2: 
            print("correct")
        else: 
            print("incorrect")
    
    guess=input("What is your guess: dog, horse, pig, turtle, ostrich")
    if guess==chosenpet:
        print("correct!")
    else: 
        print("wrong, correct guess:" +chosenpet)
    pass 

# user mode 
def createusermode():
    userdictionary={}
    usercategory=input("What is the Name of your category?")
    #ask user fr a key
    for i in range(5):
        key1=input("provide an object for the category?")
        userlist=[]
        for i in userlist:
            attributeskey1=input("what is an attribute for this item?")
            userlist.append(attributeskey1)
        # add it into the dictinary as userdictionary[key]=[value]
        userdictionary[key1]=userlist

gamestate= True
while gamestate==True: 
    usermode=input("Would you like to play a pre-made mode or a user mode?")
    if usermode=="user mode": 
        createusermode()
    else:
        modechoice=input("Which mode do you want to play?: sea life, food, or pets")
        if modechoice=="sea life":
            mode1()
        elif modechoice=="food":
            mode2()
        else:
            mode3()
        
        finalchoice=input("Do you want to play again? Yes or no?")
        if finalchoice=="yes":
            gamestate=True
        else: 
            gamestate=False
        

